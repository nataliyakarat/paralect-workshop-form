html {
  height: 100%;
  box-sizing: border-box;
  text-rendering: optimizeSpeed;
}

*,
::before,
::after {
  box-sizing: inherit;
}

body {
  height: 100%;
  min-width: var(--minWidth);
  color: var(--colorText);
  font-family: var(--fontFamily);
  font-size: var(--fontSize);
  font-weight: 400;
  line-height: var(--lineHeight);
}

img {
  max-width: 100%;
  height: auto;
}
